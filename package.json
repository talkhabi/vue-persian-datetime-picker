{
  "name": "vue-persian-datetime-picker",
  "description": "A vue plugin to select jalali date and time",
  "version": "2.0.1",
  "author": "mohammad talkhabi",
  "license": "MIT",
  "main": "dist/vue-persian-datetime-picker.js",
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "persian datepicker",
    "jalali datepicker",
    "shamsi datepicker"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "export": "cross-env NODE_ENV=export webpack --progress --hide-modules",
    "browser": "cross-env NODE_ENV=browser webpack --progress --hide-modules",
    "buildAll": "npm run build && npm run export && npm run browser",
    "lint": "eslint --fix --ext .js,.vue src"
  },
  "dependencies": {
    "moment-jalaali": "^0.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/talkhabi/vue-persian-datetime-picker"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.2.2",
    "file-loader": "^1.1.4",
    "highlight.js": "^9.12.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "vue": "^2.4.4",
    "vue-highlight.js": "^2.2.0",
    "vue-icon": "^2.1.1",
    "vue-loader": "^13.0.5",
    "vue-router": "^3.0.2",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "vue/max-attributes-per-line": ["error", {
        "singleline": 5,
        "multiline": {
          "max": 1,
          "allowFirstLine": false
        }
      }],
      "vue/html-self-closing": ["error", {
        "html": {
          "void": "always",
          "normal": "always",
          "component": "always"
        },
        "svg": "always",
        "math": "always"
      }]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
